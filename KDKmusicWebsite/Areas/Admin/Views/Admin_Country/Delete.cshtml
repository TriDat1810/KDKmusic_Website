@model KDKmusicWebsite.Models.Country

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa quốc gia</h2>

<p>Bạn có chắc chắn muốn xóa quốc gia này không?</p>

<p>Tên quốc gia: @Model.Country_Name</p>
<p>Mã quốc gia: @Model.Country_Id</p>

@{
    int id = Model.Country_Id;
}

<form action="@Url.Action("DeleteConfirmed", "Admin_Country", new { country_id = id })" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-outline-danger">Xóa</button>
</form>
