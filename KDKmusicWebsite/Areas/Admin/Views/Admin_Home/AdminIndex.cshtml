
@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main class="container text-center">
    <div class="col">
        <h4>
            Quản lý tài khoản quản trị và người dùng
        </h4>
        <hr />
        <div class="btn btn-primary">
            <a class="anchor" href="@Url.Action("ShowDisplay", "Admin_Manager", null, Request.Url.Scheme)">Tài khoản quản trị</a>
        </div>
        <div class="btn btn-primary">
            <a class="anchor" href="@Url.Action("ShowDisplay", "User_Manager", null, Request.Url.Scheme)">Tài khoản người dùng</a>
        </div>
    </div>
    <div class="col">
        <h4>Quản lý thông tin quốc gia và nghệ sĩ</h4>
