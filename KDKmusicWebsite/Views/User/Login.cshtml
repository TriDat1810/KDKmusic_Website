@*@model IEnumerable<KDKmusicWebsite.Models.User>*@

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container">
        <!-- Invalid Login -->
        <h4 class="alert alert-primary alert-danger bg-dark">@ViewBag.ThongBao</h4>
        @Html.ValidationSummary(true)
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Đăng nhập!</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Nhập tài khoản" name="TaiKhoan">
                                            @ViewData["Loi1"]
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Nhập mật khẩu" name="MatKhau">
                                            @ViewData["Loi2"]
                                        </div>
                                        @*<div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck">
                                                    <label class="custom-control-label" for="customCheck">
                                                        Remember
                                                        Me
                                                    </label>
                                                </div>
                                            </div>*@
                                        @*<a href="@Url.Action("Index", "Home", null, Request.Url.Scheme)" class="btn btn-primary btn-user btn-block">
                                                Đăng nhập
                                            </a>*@
                                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Đăng nhập" />
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Register", "User", null, Request.Url.Scheme)">Tạo tại tài khoản</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
}