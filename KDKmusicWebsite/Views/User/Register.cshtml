@model KDKmusicWebsite.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Tạo tài khoản mới!</h1>
                        </div>
                        <form class="user">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <input type="text" class="form-control form-control-user" id="exampleUsername"
                                           placeholder="Nhập tên tài khoản">
                                    @ViewData["Loi1"]
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                                       placeholder="Nhập địa chỉ email">
                                    @ViewData["Loi4"]
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="password" class="form-control form-control-user"
                                           id="exampleInputPassword" placeholder="Nhập mật khẩu">
                                    @ViewData["Loi2"]
                                </div>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control form-control-user"
                                           id="exampleRepeatPassword" placeholder="Nhập lại mật khẩu">
                                    @ViewData["Loi3"]
                                </div>
                            </div>
                                <input type="submit" value="Đăng ký" class="btn btn-primary btn-user btn-block"/>
                            @*<hr>
                            <a href="#" class="btn btn-google btn-user btn-block">
                                <i class="fab fa-google fa-fw"></i> Register with Google
                            </a>
                            <a href="#" class="btn btn-facebook btn-user btn-block">
                                <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                            </a>*@
                        </form>
                        <hr>
                        @*<div class="text-center">
                            <a class="small" href="#">Forgot Password?</a>
                        </div>*@
                        <div class="text-center">
                            <a class="small" href="@Url.Action("Login", "User", null, Request.Url.Scheme)">Tôi đã có tài khoản? Đăng nhập!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

