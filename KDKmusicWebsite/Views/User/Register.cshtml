@model KDKmusicWebsite.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Tạo tài khoản mới!</h1>
                            </div>
                            <form class="user">
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <input type="text" class="form-control form-control-user" id="exampleUsername"
                                               placeholder="Username" name="TaiKhoan">
                                        <div style="color:red;">@ViewData["Loi1"]</div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Password" name="MatKhau">
                                        <div style="color:red;">@ViewData["Loi2"]</div>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user"
                                               id="exampleRepeatPassword" placeholder="Repeat Password" name="NhapLaiMatKhau">
                                        <div style="color:red;">@ViewData["Loi3"]</div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                                           placeholder="Email Address" name="NhapEmail">
                                    <div style="color:red;">@ViewData["Loi4"] </div>
                                </div>
                                <input type="submit" value="Register Account" class="btn btn-primary btn-user btn-block" />
                                <hr>
                                <a href="/User/LoginFacebook" class="btn btn-facebook btn-user btn-block" onclick="DevFeature_Alert()">
                                    <i class="fab fa-facebook-f fa-fw"></i> Create Account with Facebook
                                </a>
                                <a href="#" class="btn btn-google btn-user btn-block" onclick="DevFeature_Alert()">
                                    <i class="fab fa-google fa-fw"></i> Create Account with Google
                                </a>
                                <hr>
                            </form>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("Login", "User", null, Request.Url.Scheme)">Tôi đã có tài khoản? Đăng nhập!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
   
