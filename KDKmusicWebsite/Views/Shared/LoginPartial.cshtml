@model KDKmusicWebsite.Models.User

@if (Session["User"] != null)
{

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="padding:0px 10px">@Session["User_name"]</a>
            <ul class="dropdown-menu">
                <li><a style="color: #3498db;" href="#">Thông tin tài khoản</a></li>
                <li><a style="color: #3498db;" href="@Url.Action("ShowPlaylists", "AddPlaylist")">Danh sách nhạc của bạn</a></li>
                <li>
                    <hr>
                    <p id="logout" style=" text-align: center; margin:0;"><a style="color: #3498db;" href="@Url.Action("Logoff", "User", null, Request.Url.Scheme)">Đăng xuất</a></p>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <a href="@Url.Action("Login", "User", null, Request.Url.Scheme)" class="login">Đăng nhập</a>
    <a href="@Url.Action("Register", "User", null, Request.Url.Scheme)" class="register">Tạo tài khoản mới</a>
}
