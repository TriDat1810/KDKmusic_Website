@model KDKmusicWebsite.Models.Artist

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    header {
        background-color: #333;
        color: #fff;
        padding: 20px;
        text-align: center;
    }

    h1 {
        margin-top: 0;
    }

    .contentDetails {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    img {
        max-width: 100%;
        height: auto;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #333;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 10px;
        margin-bottom: 10px;
    }

        .btn:hover {
            background-color: #555;
        }
</style>

<main>
    <div>
        <header>
            <h1>@Model.Artist_Name</h1>
        </header>
        <div class="contentDetails">
            <img src="https://www.billboard.com/files/styles/article_main_image/public/media/charlie-puth-2017-grammys-red-carpet-billboard-1548.jpg" alt="Charlie Puth">
            <p>Charlie Puth là một ca sĩ, nhạc sĩ và nhà sản xuất âm nhạc người Mỹ. Anh được biết đến với những bản hit như "One Call Away," "Attention," và "We Don't Talk Anymore." Sinh ra và lớn lên ở Rumson, New Jersey, Charlie Puth đã chơi piano từ khi còn nhỏ và tập trung vào việc học âm nhạc khi lên đến trường trung học. Anh đã tốt nghiệp đại học Berklee College of Music</p>
            <a href="#" class="btn">Xem One Call Away</a>
            <a href="#" class="btn">Xem Attention</a>
            <a href="#" class="btn">Xem We Don't Talk Anymore</a>
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to List", "ShowDisplay")
    </p>
</main>
