@model IEnumerable<KDKmusicWebsite.Models.Song>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <p>
        @Html.TextBox("keyword")
        <input type="submit" value="Search" />
    </p>
}

<table>
    <tr>
        <th>Song Name</th>
        <th>Artist Name</th>
    </tr>
    @foreach (var song in Model)
    {
        <tr>
            <td>@song.Song_Name</td>
            <td>@song.Artist.Artist_Name</td>
        </tr>
    }
</table>

<script>
    // Lấy đối tượng input search
    const searchBox = document.getElementById("search-box");

    // Bắt sự kiện khi người dùng ấn phím Enter
    searchBox.addEventListener("keyup", function (event) {
        // Kiểm tra xem người dùng đã ấn phím Enter chưa
        if (event.key === "Enter") {
            // Lấy giá trị của trường nhập liệu search
            const keyword = searchBox.value;

            // Gửi yêu cầu tìm kiếm đến máy chủ
            window.location.href = "/search?keyword=" + keyword;
        }
    });

</script>


